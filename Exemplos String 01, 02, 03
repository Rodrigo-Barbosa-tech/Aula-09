package aula09;
public class exemplo01 {
public static void main(String [] args){

String original = "Olá aula09";

String concatenada = original + " exemplos";

String maiusculo = original.toUpperCase();

System.out.println("String original: " + original);
System.out.println("String concatenada: " + concatenada);
System.out.println("String maiusculo: " + maiusculo);


System.out.println("String original pós alterações: " + original);

}
}

