package aula09;

import java.util.Scanner;

public class exemplo02{
public static void main(String[] args){
Scanner scanner = new Scanner(System.in);

String exemplo = "Exemplo de frase";

char primeiroCaractere = exemplo.charAt(0);
char ultimoCaractere = exemplo.charAt(15);

System.out.println("O Primeiro caractere da frase é: " + primeiroCaractere);
System.out.println("O Ultimo caractere da frase é: " + ultimoCaractere);

                         scanner.close();

}
}

