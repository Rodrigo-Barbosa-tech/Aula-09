package aula09;

import java.util.Scanner;

public class exemplo01 {
public static void main(String[] args){
Scanner scanner = new Scanner(System.in);

String aula09 = "Primeiro metodo dos exemplos";
int tamanho = aula09.length();

System.out.println("A frase possui: " + tamanho + " caracteres");

                   scanner.close();
}
}

