package aula09;
import java.util.Scanner;
public class exemplo05 {
public static void main(String[] args){
Scanner scanner = new Scanner(System.in);

System.out.println("Digite seu texto: ");
String texto = scanner.nextLine();

System.out.println("Digite o número referente a letra incial da qual deseja o trecho (de 1 a numero de letras final do texto): ");
int nmr1 = scanner.nextInt();

System.out.println("Digite o segundo número referente a letra final da qual deseja o trecho: ");
int nmr2 = scanner.nextInt();

String subString = texto.substring(nmr1 - 1, nmr2);

System.out.println("O trecho referente ao numero das letras extraido foi:" + subString);

             scanner.close();

}}

